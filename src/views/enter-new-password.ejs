<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./ui/head.ejs') %>

</head>

<body>
    <%- include('./component/background.ejs') %>

        <div class="hero is-fullheight">
            <div class="hero-body is-justify-content-center is-align-items-center">
                <div class="columns is-flex is-flex-direction-column box"
                    style="background: rgba(0,0,0,0.53)!important; color: white;">
                    <%- include('./component/logo.ejs') %>

                        <div id="error">
                            <% if (errorMessage.length> 0) { %>

                                <div class="notification is-danger">
                                    <%= errorMessage %>

                                </div>

                                <% } %>
                        </div>
                        <form class="demoForm" action="/auth/forgot-password/reset-password" method="post">
                            <p class="subtitle">New password</p>
                            <input id="new-password" class="input is-primary" required name="newPassword"
                                type="password" placeholder="Enter new password" />
                            <p class="subtitle">Confirm Password</p>
                            <input id="confirm-password" class="input is-primary" required name="confirmPassword"
                                type="password" placeholder="Enter confirm password" />
                            <div class="column">
                                <button id="send" style="display: none;" class="button is-primary is-fullwidth my-3"
                                    type="submit">Send</button>
                            </div>
                        </form>
                </div>
            </div>
        </div>

</body>

</html>